{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "object",

    "request": {
        "type": "object",
        "properties": {
            "oswls": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "master_node_uid": {"type": "string"},
                        "id": {"type": "integer"},
                        "cluster_id": {"type": "integer"},
                        "creation_date": {
                            "type": "string",
                            "format": "date"
                        },
                        "update_time": {
                            "type": "string",
                            "format": "time"
                        },
                        "resource_type": {"type": "string"},
                        "resource_checksum": {"type": "string"},
                        "resource_data": {
                            "type": "object",
                            "properties": {
                                "added": {"type": "object"},
                                "current": {"type": "array"},
                                "removed": {"type": "object"},
                                "modified": {"type": "object"}
                            },
                            "required": ["added", "current", "removed", "modified"],
                            "additionalProperties": false
                        }
                    },
                    "required": ["master_node_uid", "id", "cluster_id",
                        "creation_date", "update_time", "resource_checksum",
                        "resource_data"],
                    "additionalProperties": false
                }
            }
        },
        "additionalProperties": false
    },

    "response": {
        "oneOf": [
            {
                "type": "object",
                "properties": {
                    "status": {"enum": ["ok"]},
                    "message": {"type": "string"},
                    "exec_time": {"type": "number"},
                    "oswls": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "master_node_uid": {"type": "string"},
                                "id": {"type": "integer"},
                                "status": {"enum": ["added", "updated", "failed"]}
                            },
                            "required": ["master_node_uid", "id", "status"],
                            "additionalProperties": false
                        }
                    }
                },
                "required": ["status", "oswls"],
                "additionalProperties": false
            },
            {
                "type": "object",
                "properties": {
                    "status": {"enum": ["error"]},
                    "exec_time": {"type": "number"},
                    "message": {"type": "string"}
                },
                "required": ["status", "message"],
                "additionalProperties": false
            }
        ]
    }

}